<assembly>
  <baseDirectory>/</baseDirectory>
  <id>docker_tomcat-assembly</id>
  <formats>
    <format>zip</format>
  </formats>

  <files>
  </files>

        <fileSets>
              <fileSet>  
                     <directory>${project.basedir}/scripts</directory>
                     <outputDirectory>/opt/dochack/scripts</outputDirectory>
                     <fileMode>0755</fileMode>
              </fileSet>
        </fileSets>

  <dependencySets>
    <dependencySet>
        <unpack>false</unpack>
        <scope>runtime</scope>
        <outputDirectory>/opt/dochack/tomcat/webapps</outputDirectory>
        <includes>
            <include>org.docker.hackathon:app2:war</include>
        </includes>
	<outputFileNameMapping>ROOT.war</outputFileNameMapping>
    </dependencySet>
  </dependencySets>
</assembly>
